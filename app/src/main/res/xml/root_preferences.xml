<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/general_pref_category">

        <Preference
            app:iconSpaceReserved="false"
            app:key="suggestion"
            app:summary="@string/suggestion_summary"
            app:title="@string/suggest_text" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/socials_pref_category">

        <Preference
            app:iconSpaceReserved="false"
            app:key="twitter"
            app:summary="@string/twitter_summary"
            app:title="@string/follow_twitter_text" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="discord"
            app:summary="@string/discord_summary"
            app:title="@string/join_discord_text" />

    </PreferenceCategory>

</PreferenceScreen>