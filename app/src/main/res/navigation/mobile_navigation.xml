<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="app.curioustale.curioustale.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/from_home_to_answer"
            app:destination="@id/answer_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_my_stories"
        android:name="app.curioustale.curioustale.ui.dashboard.DashboardFragment"
        android:label="@string/title_my_stories"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="app.curioustale.curioustale.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/answer_fragment"
        android:name="app.curioustale.curioustale.ui.answer.AnswerFragment"
        android:label="@string/title_answer"
        tools:layout="@layout/fragment_answer" />
</navigation>